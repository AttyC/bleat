<%= form_with scope: :restaurant, url: restaurants_path, local: true do |form| %>
<% if @restaurant.errors.any? %>
<div id="error_explanation">
  <h2> Please check the <%= pluralize(@restaurant.errors.count, "error") %> below:
  </h2>
  <ul>
    <% @restaurant.errors.full_messages.each do |msg| %>
    <li> <%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>
  <p>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :description %>
    <%= form.text_field :description %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back', restaurants_path %>