<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @restaurant.description %>
</p>

<p>
  <%= link_to "Remove Restaurant", restaurant_path(@restaurant),
  method: :delete,
  data: { confirm: 'Are you sure?' } %>
</p>

<p>
  <%= link_to "Edit", edit_restaurant_path(@restaurant) %>
</p>

<%= link_to 'Back', restaurants_path %>
<%= link_to 'Add Review', new_restaurant_review_path(@restaurant) %>

<div id='reviews'>
  <ul>
  <% @restaurant.reviews.each do |review| %>
   <li>Review <%= review.id %> <%= review.rating %>: <%= review.comment  %>
   <%= link_to "Remove Review #{review.id}", restaurant_review_path(@restaurant.id, review),
     method: :delete,
     data: { confirm: 'Are you sure?' } %>
   </li>
  <% end %>
  </ul>
</div>
